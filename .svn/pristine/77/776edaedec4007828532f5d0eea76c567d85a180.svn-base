		// TODO Auto-generated method stub
		Account myAccount= new Account("호날두");
		System.out.println(myAccount.name+"님의 현재 잔고: "+myAccount.nowMoney+"원");
		myAccount.deposit(20000, "2017-04-20");
		myAccount.withdraw(5000, "2017-04-21");
		myAccount.deposit(10000,"2017-04-21");
