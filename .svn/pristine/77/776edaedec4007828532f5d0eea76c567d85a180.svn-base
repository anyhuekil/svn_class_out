package javahomework.a13_SeoJunghyo;

class Account{
	String name;
	int outMoney;
	int saveMoney;
	int nowMoney;
	String date;
	String text;
	
	Account(String name){
		this.name=name;
	}
	Account(String name, int nowMoney){
		this.name=name;
		this.nowMoney=nowMoney;
	}
	int deposit(int saveMoney, String date){
		this.saveMoney=saveMoney;
		this.date=date;
		outMoney=0;
		nowMoney+=saveMoney;
		return nowMoney;
	}
	int withdraw(int outMoney, String date){
		this.outMoney=outMoney;
		this.date=date;
		saveMoney=0;
		nowMoney-=outMoney;
		return nowMoney;
	}
	void show(){
		System.out.println("날짜: "+date+"\t입금액: "+saveMoney+"원\t출금액"+outMoney+"원 \t현재 잔고: "+nowMoney+"원");
	}
	
}
